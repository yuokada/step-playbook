[Unit]
Description=Running Jupyter nootbook
After=network.target

[Service]
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/notebook
PrivateTmp=true
Type=Simple
# PIDFile=/var/run/notebook/notebook.pid
EnvironmentFile=/etc/default/notebook
ExecStartPre=/usr/bin/Rscript /home/ubuntu/kernel-install.R
ExecStart=/home/ubuntu/venv/bin/jupyter-notebook --ip=0.0.0.0 --no-browser --config=/home/ubuntu/.jupyter/jupyter_notebook_config.py

[Install]
WantedBy=multi-user.target
